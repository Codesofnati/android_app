<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dait_and_Fitness"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="40dp"><!-- res/layout/activity_main.xml -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:elevation="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/imm"
                />
            <TextView
                android:id="@+id/diet"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Diet"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|\n|"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/imm" />

            <TextView
                android:id="@+id/fitness"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Fitness"

                android:textSize="16dp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>


        <!-- Diet List Layout -->
        <LinearLayout
            android:id="@+id/dietLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/shape"
            android:visibility="gone">

            <ListView
                android:id="@+id/lvDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diet List:" />

            <TextView
                android:id="@+id/salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Salad"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Fruits" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Vegetables" />

            <TextView
                android:id="@+id/itemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Fitness List Layout -->
        <LinearLayout
            android:id="@+id/fitnessLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/shape"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness List:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Running" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Weightlifting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Yoga" />

        </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </GridLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="56dp"
        android:layout_width="200dp"
        android:layout_height="234dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="25dp"
        />


</LinearLayout>